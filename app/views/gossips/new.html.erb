<% if @gossip.errors.any? %>
   <div class="alert alert-danger" role="alert">
 <p>Nous n'avons pas réussi à créer le potin pour la (ou les) raison(s) suivante(s) :</p>
 <ul>
   <% @gossip.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
 </ul>
</div>
<% end %>

<div class="mx-auto text-center">
      <div class="jumbotron">
        <h1 class="display-4">Ajoute ton secret</h1>
        <p class="lead">Promis notre database est safe 👌</p>
      </div>
</div>

<div class="container col-md-8 order-md-1">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

      <div class="form-group">
            <%= label_tag 'Titre ✏️' %>
            <%= text_field_tag 'title', @title, class: "form-control"  %>
      </div>

      <div class="form">
            <%= label_tag 'Contenu 🔖' %>
            <%= text_area_tag 'content', @content, class: "form-control" %>
      </div>

      <div class="form-group">
            <%= submit_tag "Créer", class: "btn btn-lg btn-block btn-primary mt-3" %>
      </div>

      <% end %>
</div>