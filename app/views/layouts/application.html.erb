<!DOCTYPE html>
<html>
  <head>
    <title>TheGossipProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.bundle.min.js" %>
    <%= stylesheet_link_tag href="https://use.fontawesome.com/releases/v5.7.1/css/all.css" %>


    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container">
      <a class="navbar-brand text-white" href="<%=root_path%>">Gossip Project</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link text-white" href="<%=pages_team_path%>">Team <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link text-white" href="<%=pages_contact_path%>">Contact <span class="sr-only">(current)</span></a>
          </li>
          <% if logged_in? %>
          <%= link_to "Log Out", session_path('bogus-id'), method: :delete, class: "btn btn-danger" %>
          <% else %>
            <%= link_to "Sign Up", new_user_path, class: "btn btn-light" %>
            <%= link_to "Log In", new_session_path, class: "btn btn-dark ml-2" %> 
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
    <%= yield %>


  <footer class="pt-4 my-md-5 pt-md-5 border-top">
    <div class="container">
    <div class="row">
      <div class="col-12 col-md">
        <small class="d-block mb-3 text-muted">&copy; 2018-2019</small>
      </div>
      <div class="col-10">
        <h5>Menu</h5>
        <ul class="list-unstyled text-small">
          <li><a class="text-muted" href="<%=root_path%>">Accueil </a></li>
          <li><a class="text-muted" href="<%=pages_team_path%>">Team </a></li>
          <li><a class="text-muted" href="<%=pages_contact_path%>">Contact </a></li>
        </ul>
      </div>
      </div>
    </div>
  </footer>
  </body>
</html>
